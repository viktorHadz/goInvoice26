[Unit]
Description=GoInvoicer API
After=network.target

[Service]
Type=simple
User=goinvoicer
Group=goinvoicer
WorkingDirectory=/opt/goinvoicer
EnvironmentFile=/etc/goinvoicer/goinvoicer.env
ExecStart=/opt/goinvoicer/goinvoicer
Restart=always
RestartSec=2
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/goinvoicer

[Install]
WantedBy=multi-user.target
